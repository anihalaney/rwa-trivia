{
  "name": "trivia",
  "version": "0.0.0",
  "license": "MIT",
  "angular-cli": {},
  "scripts": {
    "ng": "ng",
    "start-trivia": "ng serve trivia",
    "start-trivia-admin": "ng serve trivia-admin",
    "prod:start-trivia": "ng serve --prod trivia --configuration=production",
    "prod:start-trivia-admin": "ng serve --prod trivia-admin --configuration=production",
    "api": "json-server --watch src/db.json",
    "lint": "tslint \"src/**/*.ts\" --project src/tsconfig.json --type-check && tslint \"e2e/**/*.ts\" --project e2e/tsconfig.json --type-check",
    "test": "jest",
    "test:watch": "jest --watch",
    "pree2e": "webdriver-manager update --standalone false --gecko false",
    "e2e": "protractor",
    "deploy-functions-local": "npm run compile-functions  && firebase serve --only functions",
    "compile-functions": "rmdir /s/q functions\\server & tsc --project functions",
    "deploy-trivia-functions": "npm run deploy-trivia-functions-build && npm run deploy-functions-app && npm run deploy-functions-ssr && npm run deploy-apps-to-firebase",
    "deploy-trivia-functions-build": "npm run build-trivia:ssr && npm run compile-ssr-functions",
    "build-trivia:ssr": "ng build trivia --prod --configuration=dev && ng build trivia-admin --prod --configuration=dev && ng run trivia:server",
    "compile-ssr-functions": "npm run compile-functions && npm run webpack:server && mv dist/index.html functions/dist/index.html",
    "webpack:server": "webpack --config webpack.server.config.js",
    "deploy-functions-app": "npm run pre-compile-app-functions && firebase deploy -P default --only functions",
    "pre-compile-app-functions": "rm -rf functions/index.js && cp functions/app-functions.js functions/index.js",
    "deploy-functions-ssr": "npm run pre-compile-ssr-functions && firebase deploy -P default --only functions:ssr",
    "pre-compile-ssr-functions": "rm -rf functions/index.js && cp functions/ssr-functions.js functions/index.js",
    "deploy-apps-to-firebase": "firebase deploy -P default --only hosting",
    "prod:deploy-trivia-functions": "npm run prod:deploy-trivia-functions-build && npm run prod:set-index && npm run prod:deploy-functions-app && npm run prod:deploy-functions-ssr && npm run prod:deploy-apps-to-firebase",
    "prod:deploy-trivia-functions-build": "npm run prod:build-trivia:ssr && npm run compile-ssr-functions",
    "prod:build-trivia:ssr": "ng build trivia --prod --configuration=production && ng build trivia-admin --prod --configuration=production && ng run trivia:server",
    "prod:set-index": "firebase -P production functions:config:set elasticsearch.index.production=true",
    "prod:deploy-functions-app": "npm run pre-compile-app-functions && firebase deploy -P production --only functions",
    "prod:deploy-functions-ssr": "npm run pre-compile-ssr-functions && firebase deploy -P production --only functions:ssr",
    "prod:deploy-apps-to-firebase": "firebase deploy -P production --only hosting",
    "run-scheduler-dev": "npm run compile-scheduler-functions && node scheduler/server/run-scheduler.js dev",
    "compile-scheduler-functions": "rmdir /s/q scheduler\\server & tsc --project scheduler",
    "run-scheduler-prod": "npm run compile-scheduler-functions && node scheduler/server/run-scheduler.js prod"
  },
  "private": true,
  "dependencies": {
    "@angular-devkit/core": "^0.6.8",
    "@angular/animations": "6.0.6",
    "@angular/cdk": "6.3.0",
    "@angular/common": "6.0.6",
    "@angular/compiler": "6.0.6",
    "@angular/core": "6.0.6",
    "@angular/flex-layout": "6.0.0-beta.16",
    "@angular/forms": "6.0.6",
    "@angular/http": "6.0.6",
    "@angular/material": "6.3.0",
    "@angular/platform-browser": "6.0.6",
    "@angular/platform-browser-dynamic": "6.0.6",
    "@angular/platform-server": "^6.0.7",
    "@angular/pwa": "^0.6.8",
    "@angular/router": "6.0.6",
    "@angular/service-worker": "6.0.6",
    "@fortawesome/angular-fontawesome": "0.1.0-10",
    "@fortawesome/fontawesome-svg-core": "^1.2.0",
    "@fortawesome/free-brands-svg-icons": "^5.1.0",
    "@fortawesome/free-solid-svg-icons": "^5.1.0",
    "@ngrx/effects": "6.0.1",
    "@ngrx/router-store": "6.0.1",
    "@ngrx/store": "6.0.1",
    "@ngrx/store-devtools": "6.0.1",
    "@nguniversal/express-engine": "^6.0.0",
    "@nguniversal/module-map-ngfactory-loader": "^6.0.0",
    "@ngx-share/button": "^6.0.1",
    "@ngx-share/buttons": "^6.0.1",
    "@ngx-share/core": "^6.0.1",
    "angularfire2": "^5.0.0-rc.11",
    "compression": "^1.7.3",
    "core-js": "2.5.7",
    "dom-to-image": "^2.6.0",
    "domino": "^2.0.2",
    "firebase": "^5.2.0",
    "hammerjs": "2.0.8",
    "jasmine-marbles": "^0.3.1",
    "lodash": "^4.17.10",
    "ngx-img-cropper": "^0.10.4",
    "ngx-lazy-load-images": "^1.3.1",
    "ngx-papaparse": "^2.1.4",
    "rxjs": "6.2.1",
    "stream": "0.0.2",
    "zone.js": "0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.6.8",
    "@angular-devkit/build-ng-packagr": "~0.6.8",
    "@angular/cli": "6.0.8",
    "@angular/compiler-cli": "6.0.6",
    "@types/hammerjs": "2.0.35",
    "@types/jasmine": "2.8.8",
    "@types/jest": "^23.1.4",
    "@types/node": "10.3.5",
    "codelyzer": "4.4.1",
    "husky": "^1.0.0-rc.13",
    "jasmine-core": "3.1.0",
    "jasmine-spec-reporter": "4.2.1",
    "jest": "^23.3.0",
    "jest-preset-angular": "^5.2.3",
    "json-server": "0.14.0",
    "karma": "2.0.4",
    "karma-chrome-launcher": "2.2.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "2.0.1",
    "karma-jasmine": "1.1.2",
    "karma-jasmine-html-reporter": "1.1.0",
    "ng-packagr": "^3.0.0-rc.2",
    "protractor": "^5.4.1",
    "source-map-explorer": "^1.6.0",
    "ts-loader": "^4.2.0",
    "ts-node": "7.0.0",
    "tsickle": ">=0.25.5",
    "tslib": "^1.7.1",
    "tslint": "5.10.0",
    "typescript": "2.7.2",
    "webpack-cli": "^3.0.8",
    "xmlhttprequest": "^1.8.0"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupTestFrameworkScriptFile": "<rootDir>/projects/trivia/src/setup-jest.ts",
    "verbose": true,
    "testURL": "http://localhost/",
    "globals": {
      "ts-jest": {
        "tsConfigFile": "projects/trivia/tsconfig.spec.json"
      },
      "__TRANSFORM_HTML__": true
    }
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run test && ng e2e trivia-e2e"
    }
  }
}
